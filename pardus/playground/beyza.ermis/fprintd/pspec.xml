        <License>GPLv2</License>
        <IsA>app</IsA>
        <Summary>D-Bus service to access fingerprint readers</Summary>
        <Description>fprintd is a D-Bus daemon that offers libfprint functionality over the D-Bus interprocess communication bus. It solves various problems related to multiple applications simulatenously competing for fingerprint readers.</Description>
        <Archive sha1sum="63ee06db0af2380582a5a5ab6e214c49c76134c4" type="tarbz2">http://cgit.freedesktop.org/libfprint/fprintd/snapshot/V_0_4_1.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>dbus-glib-devel</Dependency>
            <Dependency>pam-devel</Dependency>
            <Dependency>libfprint-devel</Dependency>
            <Dependency>gtk-doc</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>fprintd</Name>
        <RuntimeDependencies>
	    <Dependency>libfprint</Dependency>
       </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/security</Path>
            <Path fileType="executable">/usr/libexec/fprintd</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="config">/etc/fprintd.conf</Path>
            <Path fileType="config">/etc/dbus-1/system.d</Path>
            <Path fileType="data">/usr/share</Path>
            <Path fileType="man">/usr/share/man/man1</Path>
            <Path fileType="doc">/usr/share/doc/fprintd</Path>
            <Path fileType="doc">/usr/share/gtk-doc/html/fprintd</Path>
        </Files>
    </Package>

