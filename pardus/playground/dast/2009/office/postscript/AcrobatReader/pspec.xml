    <Package>
        <Name>AcrobatReader</Name>
        <Icon>AdobeReader9.png</Icon>
        <RuntimeDependencies>
            <Dependency>atk</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>mesa</Dependency>
            <Dependency>libXt</Dependency>
            <Dependency>pango</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>fontconfig</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/opt/AcrobatReader/bin</Path>
            <Path fileType="executable">/opt/AcrobatReader/Reader/intellinux/bin</Path>
            <Path fileType="library">/opt/AcrobatReader/Reader/intellinux/lib</Path>
            <Path fileType="library">/opt/AcrobatReader/Reader/intellinux/plug_ins</Path>
            <Path fileType="library">/opt/AcrobatReader/Reader/intellinux/plug_ins3d</Path>
            <Path fileType="library">/opt/AcrobatReader/Reader/intellinux/SPPlugins</Path>
            <Path fileType="data">/opt/AcrobatReader</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="data">/usr/share/mime</Path>
            <Path fileType="data">/usr/share/mimelnk</Path>
        </Files>
    </Package>

    <Package>
        <Name>AcrobatReader-firefox</Name>
        <Icon>AdobeReader9.png</Icon>
        <Summary>Acrobat Reader plugin for mozilla firefox.</Summary>
        <RuntimeDependencies>
            <Dependency version="current">AcrobatReader</Dependency>
            <Dependency>firefox</Dependency>
            <Dependency>libXt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/opt/AcrobatReader/Browser</Path>
            <Path fileType="library">/usr/lib/nsbrowser/plugins</Path>
            <Path fileType="data">/opt/AcrobatReader/Reader/intellinux/mozilla</Path>
        </Files>
    </Package>

    
