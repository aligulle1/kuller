serviceType = "server"
serviceDesc = _({"en": "Bacula Backup Client",
                 "tr": "Bacula Yedek Ä°stemci Servisi"})

from comar.service import *

@synchronized
def start():
    startService(command="/usr/sbin/bacula-fd",
                 args="",
                 donotify=True)

@synchronized
def stop():
    stopService(pidfile="/var/run/bacula-fd.9103.pid",
                donotify=True)


def status():
    return isServiceRunning("/var/run/bacula-fd.9103.pid")
