        </Packager>
        <License>LGPLv2.1</License>
        <Summary>Database-specific drivers for libdbi</Summary>
        <Description>This package contains the database-specific plugins needed to connect libdbi to particular database servers.</Description>
        <Archive sha1sum="599fbab115419e8fc88b3b31a38031584ee213b5" type="targz">mirrors://sourceforge/libdbi-drivers/libdbi-drivers-0.8.3-1.tar.gz</Archive>
        <BuildDependencies>
            <Dependency versionFrom="0.8.3">libdbi-devel</Dependency>
            <Dependency>mysql-libs</Dependency>
            <Dependency>postgresql-libs</Dependency>
            <Dependency>sqlite-devel</Dependency>
        </BuildDependencies>
    </Source>
    
    <Package>
        <Name>libdbi-drivers-mysql</Name>
        <Summary>MySQL plugin for libdbi</Summary>
        <RuntimeDependencies>
            <Dependency versionFrom="0.8.3">libdbi</Dependency>
            <Dependency>mysql-libs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/dbd/libdbdmysql.so</Path>
        </Files>
    </Package>

    <Package>
        <Name>libdbi-drivers-pgsql</Name>
        <Summary>PostgreSQL plugin for libdbi</Summary>
        <RuntimeDependencies>
            <Dependency versionFrom="0.8.3">libdbi</Dependency>
            <Dependency>postgresql-libs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/dbd/libdbdpgsql.so</Path>
        </Files>
    </Package>

    <Package>
        <Name>libdbi-drivers-sqlite</Name>
        <Summary>SQLite3 plugin for libdbi</Summary>
        <RuntimeDependencies>
            <Dependency versionFrom="0.8.3">libdbi</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/dbd/libdbdsqlite3.so</Path>
        </Files>
    </Package>
    
