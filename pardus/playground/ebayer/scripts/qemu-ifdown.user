#!/bin/sh
#set -x

switch=br0

if [ -n "$1" ];then
        /usr/bin/sudo /usr/sbin/brctl delif $switch $1
        /usr/bin/sudo /sbin/ip link set $1 down
        sleep 0.5s
        /usr/bin/sudo /usr/sbin/tunctl -d $1
        exit 0
else
        echo "Error: no interface specified"
        exit 1
fi

