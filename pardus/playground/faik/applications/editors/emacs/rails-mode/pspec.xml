<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>rails-mode</Name>
        <Homepage>http://dima-exe.ru/rails-on-emacs</Homepage>
        <Packager>
            <Name>Faik Uygur</Name>
            <Email>faik@pardus.org.tr</Email>
        </Packager>
        <License>GPL-2</License>
        <IsA>data</IsA>
        <Summary>Rails module for Emacs</Summary>
        <Description>Rails Mode is an emacs add-on package that makes it easy to write RoR code with TextMate-like snippets.</Description>
        <Archive sha1sum="82f42263212cc816ae3dbf0e6cbe294e2b0395e1" type="targz">http://rubyforge.org/frs/download.php/20976/emacs-rails-0.5.99.5.tar.gz</Archive>
    </Source>

    <Package>
        <Name>rails-mode</Name>
        <RuntimeDependencies>
            <Dependency>emacs</Dependency>
            <Dependency>ruby-mode</Dependency>
            <Dependency>mmm-mode</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/share/emacs</Path>
            <Path fileType="config">/etc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile permission="0644" target="/etc/emacs/site-lisp/rails-mode.el">80-rails-mode.el</AdditionalFile>
            <AdditionalFile permission="0644" target="/usr/share/emacs/site-lisp/snippet.el">snippet.el</AdditionalFile>
            <AdditionalFile permission="0644" target="/usr/share/emacs/site-lisp/find-recursive.el">find-recursive.el</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <History>
        <Update release="1">
            <Date>2007-12-12</Date>
            <Version>0.5.99.5</Version>
            <Comment>First release</Comment>
            <Name>Faik Uygur</Name>
            <Email>faik@pardus.org.tr</Email>
        </Update>
    </History>
