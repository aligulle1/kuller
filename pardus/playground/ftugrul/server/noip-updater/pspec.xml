            <Patch level="1">noip-2.1.9-cflags.patch</Patch>
            <Patch level="1">noip-2.1.4-daemon.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>noip-updater</Name>
        <Files>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="executable">/etc/init.d</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
        <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/noip-updater.desktop">noip-updater.desktop</AdditionalFile>
