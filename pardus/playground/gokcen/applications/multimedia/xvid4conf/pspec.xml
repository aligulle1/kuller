<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>xvid4conf</Name>
        <Homepage>http://t2-project.org/packages/xvid4conf.html</Homepage>
        <Packager>
            <Name>Gökçen Eraslan</Name>
            <Email>gokcen@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <Icon>xvid4conf</Icon>
        <IsA>app:gui</IsA>
        <Summary>Creates XviD configuration files</Summary>
        <Description>This tool creates XviD configuration files. The generated configuration file is meant to be read by transcodes xvid4 export module. This module (and so the configuration file) is intended to be used with XviD 1.0.</Description>
        <Archive sha1sum="b44e9b19bc4190c26992bc7c6a89a0a7960b3bd1" type="targz">http://distfiles.gentoo.org/distfiles/xvid4conf-1.12.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>gtk2</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>xvid4conf</Name>
        <RuntimeDependencies>
            <Dependency>gtk2</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="data">/usr/share/applications</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/pixmaps/xvid4conf.png">xvid4conf.png</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/xvid4conf.desktop">xvid4conf.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <History>
        <Update release="1">
            <Date>2008-02-03</Date>
            <Version>1.12</Version>
            <Comment>First release.</Comment>
            <Name>Gökçen Eraslan</Name>
            <Email>gokcen@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>
