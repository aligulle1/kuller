<PISI>
    <Source>
        <Name>kross-interpreters</Name>
        <Homepage>http://www.kde.org/</Homepage>
        <Packager>
            <Name>Gökmen Göksel</Name>
            <Email>gokmen@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <Icon>kross-interpreters</Icon>
        <IsA>app:gui</IsA>
        <Summary>KDE4 interpreters</Summary>
        <Description>kross-interpreters consists of several interpreters for KDE4.</Description>
        <Archive sha1sum="3e31b85d1a27a273450652d9f5a33f2c3c035329" type="tarbz2">mirrors://kde/stable/4.7.3/src/kross-interpreters-4.7.3.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.7.2">qt-devel</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>kross-interpreters</Name>
        <RuntimeDependencies>
            <Dependency version="current">python-kross</Dependency>
            <Dependency version="current">ruby-kross</Dependency>
            <Dependency version="current">java-kross</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-kross</Name>
        <PartOf>programming.language.python</PartOf>
        <Summary>KDE4 kross Python bindings (krosspython)</Summary>
        <Description>Contains KDE4 kross bindings for Python.</Description>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.2">qt</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="library">/usr/lib/kde4/krosspython.so</Path>
        </Files>
    </Package>

    <Package>
        <Name>ruby-kross</Name>
        <PartOf>programming.language.ruby</PartOf>
        <Summary>KDE4 kross Ruby bindings (krossruby)</Summary>
        <Description>Contains KDE4 kross bindings for Ruby.</Description>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.2">qt</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs</Dependency>
            <Dependency versionFrom="1.8.7">ruby</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="library">/usr/lib/kde4/krossruby.so</Path>
        </Files>
    </Package>

    <Package>
        <Name>java-kross</Name>
        <PartOf>programming.language.java</PartOf>
        <Summary>KDE4 kross Java bindings</Summary>
        <Description>Contains KDE4 kross bindings for Java.</Description>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.2">qt</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs</Dependency>
            <Dependency>sun-jre</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="library">/usr/lib/kde4/krossjava.so</Path>
            <Path fileType="library">/usr/lib/kde4/kross/kross.jar</Path>
        </Files>
    </Package>

