        <BuildDependencies>
            <Dependency versionFrom="4.7.2">qt-devel</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs-devel</Dependency>
            <Dependency versionFrom="4.7.3">kdepimlibs-devel</Dependency>
            <Dependency versionFrom="4.5.0">phonon-devel</Dependency>
            <Dependency versionFrom="2.7.0">soprano-devel</Dependency>
            <Dependency versionFrom="1.6.1">akonadi-devel</Dependency>
            <Dependency versionFrom="4.8.4">python-qt-devel</Dependency>
            <Dependency>sip-devel</Dependency>
            <Dependency>qimageblitz-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">find-phonon-include-dir.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>python-kde</Name>
        <IsA>app:console</IsA>
        <IsA>library</IsA>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.2">qt</Dependency>
            <Dependency versionFrom="4.7.3">kdelibs</Dependency>
            <Dependency versionFrom="4.7.3">kdepimlibs</Dependency>
            <Dependency versionFrom="4.5.0">phonon</Dependency>
            <Dependency versionFrom="2.7.0">soprano</Dependency>
            <Dependency versionFrom="4.8.4">python-qt</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib/kde4</Path>
            <Path fileType="library">/usr/lib/python*</Path>
            <Path fileType="data">/usr/share/kde4</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-kde-devel</Name>
        <IsA>data</IsA>
        <Summary>Development files for python-kde</Summary>
        <RuntimeDependencies>
            <Dependency release="current">python-kde</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="data">/usr/share/sip</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-kde-examples</Name>
        <PartOf>programming.language.python</PartOf>
        <Summary>Development files for python-kde</Summary>
        <RuntimeDependencies>
            <Dependency release="current">python-kde</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.6.5">kdebindings</Package>
        </Conflicts>
        <Files>
            <Path fileType="data">/usr/share/kde4/apps/pykde4/examples</Path>
        </Files>
    </Package>

