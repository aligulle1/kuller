<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>lightdm</Name>
        <Homepage>https://launchpad.net/lightdm</Homepage>
        <Packager>
            <Name>H. İbrahim Güngör</Name>
            <Email>ibrahim@pardus.org.tr</Email>
        </Packager>
        <License>GPLv3</License>
        <Summary>A lightweight display manager</Summary>
        <Description>lightdm is a lightweight display manager which has several greet managers like gtk, qt and webkit.</Description>
        <Archive sha1sum="704101a420de5f365dbf084265e4d4e99486e397" type="targz">http://people.ubuntu.com/~robert-ancell/lightdm/releases/lightdm-0.4.4.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>vala-devel</Dependency>
            <Dependency>qt-devel</Dependency>
            <Dependency>gtk2-devel</Dependency>
            <Dependency>cairo-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
            <Dependency>webkit-gtk-devel</Dependency>
            <Dependency>libxklavier-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">nologin-path.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>lightdm</Name>
        <IsA>app:console</IsA>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="executable">/usr/libexec</Path>
            <Path fileType="data">/usr/share/vala</Path>
            <Path fileType="data">/usr/share/lightdm</Path>
            <Path fileType="data">/usr/share/lightdm-example-gtk-greeter</Path>
            <Path fileType="data">/usr/share/gir-1.0</Path>
            <Path fileType="data">/usr/share/display-managers</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/display-managers/lightdm.desktop">lightdm.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/pam.d/lightdm.pam">lightdm.pam</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <Package>
        <Name>lightdm-qt-greeter</Name>
        <IsA>library</IsA>
        <Summary>Qt greeter of lightdm login manager</Summary>
        <RuntimeDependencies>
            <Dependency release="current">lightdm</Dependency>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/liblightdm-qt*</Path>
            <Path fileType="executable">/usr/libexec/lightdm-example-qt-greeter</Path>
            <Path fileType="data">/usr/share/lightdm/themes/example-qt-kde/index.theme</Path>
        </Files>
    </Package>

    <Package>
        <Name>lightdm-gtk-greeter</Name>
        <IsA>library</IsA>
        <Summary>Gtk+ greeter of lightdm login manager</Summary>
        <RuntimeDependencies>
            <Dependency release="current">lightdm</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>cairo</Dependency>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency>libxklavier</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/liblightdm-gobject*</Path>
            <Path fileType="executable">/usr/libexec/lightdm-example-vala-gtk-greeter</Path>
            <Path fileType="executable">/usr/libexec/lightdm-example-python-gtk-greeter</Path>
            <Path fileType="executable">/usr/libexec/lightdm-example-gtk-greeter</Path>
            <Path fileType="data">/usr/share/lightdm/themes/example-gtk-gnome</Path>
            <Path fileType="data">/usr/share/lightdm/themes/example-vala-gtk-gnome</Path>
            <Path fileType="data">/usr/share/lightdm/themes/example-python-gtk-gnome</Path>
            <Path fileType="data">/usr/share/lightdm-example-gtk-greeter/greeter.ui</Path>
        </Files>
    </Package>

    <Package>
        <Name>lightdm-devel</Name>
        <IsA>library</IsA>
        <Summary>Development files for lightdm</Summary>
        <RuntimeDependencies>
            <Dependency release="current">lightdm</Dependency>
            <Dependency>libxklavier-devel</Dependency>
            <Dependency>qt-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
    </Package>

    <History>
        <Update release="1">
            <Date>2011-04-10</Date>
            <Version>0.4.4</Version>
            <Comment>First release.</Comment>
            <Name>H. İbrahim Güngör</Name>
            <Email>ibrahim@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>
