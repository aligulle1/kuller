<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>ofono</Name>
        <Homepage>http://ofono.org</Homepage>
        <Packager>
            <Name>H. İbrahim Güngör</Name>
            <Email>ibrahim@pardus.org.tr</Email>
        </Packager>
        <License>LGPLv2.1</License>
        <Summary>A free and open source project for mobile telephony (GSM/UMTS) applications</Summary>
        <Description>oFono is a free, open source project for mobile telephony (GSM/UMTS) applications. oFono aims to provide an easy to use interface that can be used to create rich telephony applications without requiring one to have a deep understanding of the underlying technology and its limitations.</Description>
        <Archive sha1sum="7e8ea97a12f8cf57641c8aec78bca51a582fb18c" type="tarbz2">http://www.kernel.org/pub/linux/network/ofono/ofono-0.53.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>bluez-libs-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>ofono</Name>
        <IsA>app:console</IsA>
        <IsA>service</IsA>
        <RuntimeDependencies>
            <Dependency>connman</Dependency>
            <Dependency>bluez-libs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/etc/dbus-1/system.d</Path>
            <Path fileType="data">/lib/udev/rules.d</Path>
            <Path fileType="config">/etc/ofono</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="library">/usr/lib/ofono</Path>
            <Path fileType="data">/var/lib/ofono</Path>
            <Path fileType="data">/var/run/ofono</Path>
            <Path fileType="man">/usr/share/man/man8</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>ofono-devel</Name>
        <IsA>library</IsA>
        <Summary>Development files for ofono</Summary>
        <RuntimeDependencies>
            <Dependency release="current">ofono</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include/ofono</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
    </Package>

    <History>
        <Update release="1">
            <Date>2011-08-29</Date>
            <Version>0.53</Version>
            <Comment>First release.</Comment>
            <Name>H. İbrahim Güngör</Name>
            <Email>ibrahim@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>
