<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>arduino</Name>
        <Homepage>http://arduino.cc/</Homepage>
        <Packager>
            <Name>Kaan Akşit</Name>
            <Email>kunguz@gmail.com</Email>
        </Packager>
        <License>GPLv2</License>
        <Icon>Arduino</Icon>
        <Summary>Software to program with Arduino board</Summary>
        <Description>The open-source Arduino environment makes it easy to write code and upload it to the i/o board.</Description>
        <Archive sha1sum="da26af44c3173ba41201f5cf1d8b5a54b40283aa" type="targz">http://arduino.googlecode.com/files/arduino-1.0-src.tar.gz</Archive>
        <Archive sha1sum="1317dbb39c52a6fda6c0a680d7b6ddf1c49c5027" target="arduinox64" type="targz">http://arduino.googlecode.com/files/arduino-1.0-linux64.tgz</Archive>
        <BuildDependencies>
            <Dependency>ant</Dependency>
            <Dependency>avr-libc</Dependency>
            <Dependency>avrdude</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">arduino-add-to-groups.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>arduino</Name>
        <IsA>app:gui</IsA>
        <RuntimeDependencies>
            <Dependency>ant</Dependency>
            <Dependency>avr-libc</Dependency>
            <Dependency>avrdude</Dependency>
            <Dependency release="176">baselayout</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/share/arduino</Path>
            <Path fileType="library">/usr/share/arduino/lib</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="data">/usr/share/arduino/tools</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/var/lock</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/arduino.desktop">arduino.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/pixmaps/Arduino.png">Arduino.png</AdditionalFile>
        </AdditionalFiles>
   </Package>
   
   <Package>
        <Name>arduino-devel</Name>
        <IsA>data</IsA>
        <Summary>Development files for arduino</Summary>
        <RuntimeDependencies>
            <Dependency release="current">arduino</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/share/arduino/examples</Path>
            <Path fileType="header">/usr/share/arduino/hardware</Path>
            <Path fileType="header">/usr/share/arduino/libraries</Path>
        </Files>
   </Package>

   <Package>
        <Name>arduino-docs</Name>
        <IsA>data:doc</IsA>
        <Summary>Documents for arduino</Summary>
        <RuntimeDependencies>
             <Dependency release="current">arduino</Dependency>
         </RuntimeDependencies>
         <Files>
            <Path fileType="doc">/usr/share/arduino/reference</Path>
            <Path fileType="doc">/usr/share/doc/arduino</Path>
         </Files>
   </Package>
   <History>
        <Update release="1">
