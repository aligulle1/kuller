            <Path fileType="header">/usr/share/sdcc/include</Path>
            <Path fileType="header">/usr/share/sdcc/non-free/include</Path>
            <Path fileType="library">/usr/share/sdcc/lib</Path>
            <Path fileType="library">/usr/share/sdcc/non-free/lib</Path>
            <Path fileType="data">/usr/share/sdcc/non-free/lib/src/pic16/aclocal.m4</Path>
            <Path fileType="data">/usr/share/sdcc/lib/src/pic16/aclocal.m4</Path>
        </Files>
    </Package>

    <Package>
