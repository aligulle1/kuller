            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
    </Package>

    <Package>
        <Name>SoQt-devel</Name>
        <Summary>Development files for SoQt</Summary>
