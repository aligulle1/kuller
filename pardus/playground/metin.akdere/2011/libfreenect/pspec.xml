    <Package>
        <Name>libfreenect</Name>
        <RuntimeDependencies>
            <Dependency>libusb1</Dependency>
            <Dependency>mesa</Dependency>
            <Dependency>freeglut</Dependency>
        </RuntimeDependencies>
        <Files>
