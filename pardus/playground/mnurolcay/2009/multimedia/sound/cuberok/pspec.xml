        <IsA>app:gui</IsA>
        <Summary>Qt4 based music player</Summary>
        <Description>Cuberok is a lightweight music player based on Qt4. It has music collection support, music autorating, Last.FM scrobbler, ability to download images for albums and artists from Last.FM, tag editing capability and more.</Description>
        <Archive sha1sum="eead90a0400c6487f71093c66f2e33f3f5fb71ad" type="targz">http://cuberok.googlecode.com/files/cuberok-0.0.11.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>qt</Dependency>
            <Dependency>ffmpeg</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>gstreamer</Dependency>
            <Dependency>libsdl</Dependency>
            <Dependency>taglib</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">ffmpeg_headers.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>cuberok</Name>
        <RuntimeDependencies>
            <Dependency>qt</Dependency>
            <Dependency>ffmpeg</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>gstreamer</Dependency>
            <Dependency>libsdl</Dependency>
            <Dependency>taglib</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="localedata">/usr/share/cuberok/locale</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

