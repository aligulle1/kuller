        </Packager>
        <License>Zlib/libpng</License>
        <IsA>library</IsA>
        <Summary>The Irrlicht Engine SDK</Summary>
        <Description>The Irrlicht Engine is an open source high performance realtime 3D engine written and usable in C++ and also available for .NET languages.</Description>
        <Archive sha1sum="cc73d0d6ac47e8803b3139e83b00cdc0060527b5" type="zip">mirrors://sourceforge/irrlicht/irrlicht-1.4.zip</Archive>
        <BuildDependencies>
            <Dependency>xorg-server</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>system-libs.patch</Patch>
            <Patch>makefile.patch</Patch>
            <Patch level="1">examples-makefile.patch</Patch>
            <Patch level="1">examples-datadir.patch</Patch>
            <Patch level="1">irrlicht-tools.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>irrlicht</Name>
        <RuntimeDependencies>
            <Dependency>xorg-server</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="header">/usr/include/irrlicht</Path>
            <Path fileType="data">/usr/share/irrlicht</Path>
            <Path fileType="doc">/usr/share/doc/irrlicht-*/*.txt</Path>
            <Path fileType="doc">/usr/share/doc/irrlicht-*/irrlicht.chm</Path>
        </Files>
    </Package>

    <Package>
        <Name>irrlicht-tools</Name>
        <License>Zlib/libpng</License>
        <IsA>app:gui</IsA>
        <Summary>Irrlicht tools</Summary>
        <Description>Font tool and GUI editor for Irrlicht</Description>
        <RuntimeDependencies>
            <Dependency version="1.4">irrlicht</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/irrlicht-FontTool</Path>
            <Path fileType="executable">/usr/bin/irrlicht-GUIEditor</Path>
            <Path fileType="executable">/usr/bin/irrlicht-Meshviewer</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="data">/usr/share/applications</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/usr/share/pixmaps/irrlicht.png">irrlicht.png</AdditionalFile>
            <AdditionalFile owner="root" permission="0755" target="/usr/share/applications/irrlicht-FontTool.desktop">irrlicht-FontTool.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/irrlicht-GUIEditor.desktop">irrlicht-GUIEditor.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/irrlicht-Meshviewer.desktop">irrlicht-Meshviewer.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <Package>
        <Name>irrlicht-examples</Name>
        <License>Zlib/libpng</License>
        <IsA>data:doc</IsA>
        <Summary>Irrlicht examples</Summary>
        <Description>Example files for Irrlicht</Description>
        <RuntimeDependencies>
            <Dependency version="1.4">irrlicht</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc/irrlicht-*/examples</Path>
        </Files>
    </Package>

