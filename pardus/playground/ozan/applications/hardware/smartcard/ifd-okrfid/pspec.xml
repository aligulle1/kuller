        <License>as-is</License>
        <IsA>library</IsA>
        <Summary>PC/SC driver for CardMan 5x21 and 5x25</Summary>
        <Description>ifd-okrfid provides PC/SC drivers for RFID contactless Omnikey smart card readers like CardMan 5x21 and 5x25.</Description>
        <Archive sha1sum="fde303dc2c3da3afaf2ca1be85800f2179a8a7aa" type="targz">http://cekirdek.pardus.org.tr/~ozan/dist/sources/ifdokrfid_lnx-2.6.0.tar.gz</Archive>
        <BuildDependencies>
            <!-- It doesn't work with libhal enabled pcsc -->
            <Dependency>pcsc-lite</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>ifd-okrfid</Name>
        <RuntimeDependencies>
            <!-- It doesn't work with libhal enabled pcsc -->
            <Dependency>pcsc-lite</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/pcsc/drivers</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="executable">/lib/udev</Path>
            <Path fileType="data">/lib/udev/rules.d</Path>
            <Path fileType="config">/etc/cmrfid.ini</Path>
        </Files>
    </Package>

