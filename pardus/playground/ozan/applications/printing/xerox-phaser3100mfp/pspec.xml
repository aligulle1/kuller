        <Archive sha1sum="c69637e82d11a3dd4fbf44cccee2b9130059a715" type="tarbz2">http://cekirdek.pardus.org.tr/~ozan/dist/sources/xerox-phaser3100mfp-1.0.tar.bz2</Archive>
    </Source>

    <Package>
        <Name>xerox-phaser3100mfp</Name>
        <RuntimeDependencies>
            <Dependency>jpeg</Dependency>
            <Dependency>cups</Dependency>
            <Dependency>sane-backends</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="executable">/usr/local/bin</Path>
            <Path fileType="executable">/usr/lib/cups</Path>
            <Path fileType="library">/usr/local/lib/sane</Path>
            <Path fileType="library">/usr/lib/sane</Path>
            <Path fileType="config">/etc/sane.d</Path>
            <Path fileType="data">/lib/udev/rules.d</Path>
            <Path fileType="data">/etc/customps</Path>
            <Path fileType="data">/usr/share/cups/model</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/lib/udev/rules.d/99-libsagem.rules">99-libsagem.rules</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/sane.d/XeroxPhaser3100.conf">XeroxPhaser3100.conf</AdditionalFile>
        </AdditionalFiles>
    </Package>

