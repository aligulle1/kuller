            <Dependency>gstreamer</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency>python-gtk</Dependency>
            <Dependency>gst-plugins-base</Dependency>
