<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>zeitgeist-dataproviders</Name>
        <Homepage>https://launchpad.net/zeitgeist-dataproviders</Homepage>
        <Packager>
            <Name>Gökçen Eraslan</Name>
            <Email>gokcen@pardus.org.tr</Email>
        </Packager>
        <License>GPLv3</License>
        <IsA>app:console</IsA>
        <IsA>library</IsA>
        <Summary>Various data providers for Zeitgeist engine</Summary>
        <Description>zeitgeist-dataproviders contains various data providers which are small plugins for applications (like Firefox, Chrome Browser, Vim, Emacs, XChat etc.) whose work is to push the user’s activities as events in the Zeitgeist daemon.</Description>
        <!-- Prepared with: 'bzr branch lp:zeitgeist-dataproviders' command -->
        <Archive sha1sum="50e6a5f69715ff03c0e3f57cb5278eafb1cde4d3" type="tarlzma">http://cekirdek.pardus.org.tr/~gokcen/files/zeitgeist-dataproviders-20110510.tar.lzma</Archive>
        <BuildDependencies>
            <Dependency>vala-devel</Dependency>
            <Dependency>libzeitgeist-devel</Dependency>
            <Dependency>xulrunner-devel</Dependency>
            <Dependency>gtk2-devel</Dependency>
            <Dependency>emacs</Dependency>
            <Dependency>gtk-sharp-devel</Dependency>

            <!-- we also need tomboy, geany and zeitgeist-sharp packages to enable all plugins -->
        </BuildDependencies>
    </Source>

    <Package>
        <Name>zeitgeist-dataprovider-vim</Name>
        <Summary>VIM data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-vim informs Zeitgeist about the files edited using Vim.</Description>
        <Files>
            <Path fileType="data">/usr/share/vim</Path>
        </Files>
    </Package>

    <Package>
        <Name>zeitgeist-dataprovider-emacs</Name>
        <Summary>Emacs data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-emacs informs Zeitgeist about the files edited using Emacs.</Description>
        <Files>
            <Path fileType="data">/usr/share/emacs</Path>
        </Files>
    </Package>

    <Package>
        <Name>zeitgeist-dataprovider-telepathy</Name>
        <Summary>Telepathy data provider for Zeitgeist</Summary>
        <RuntimeDependencies>
            <Dependency>telepathy-python</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/*telepathy*</Path>
            <Path fileType="data">/usr/share/dbus-1/services/*Telepathy*</Path>
            <Path fileType="data">/usr/share/telepathy</Path>
        </Files>
    </Package>

    <Package>
        <Name>zeitgeist-dataprovider-bzr</Name>
        <Summary>Bazaar data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-bzr is a post-commit hook to inform Zeitgeist about the Bazaar commits.</Description>
        <RuntimeDependencies>
            <Dependency>bzr</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/python2.7/site-packages/bzrlib</Path>
            <Path fileType="data">/usr/share/pixmaps/bzr*</Path>
        </Files>
    </Package>

    <Package>
        <Name>zeitgeist-dataprovider-xchat</Name>
        <Summary>XChat data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-xchat informs Zeitgeist about XChat events.</Description>
        <RuntimeDependencies>
            <Dependency>libzeitgeist</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/xchat</Path>
        </Files>
    </Package>

    <!-- No way to install a Chromium Extension globally
    <Package>
        <Name>zeitgeist-dataprovider-chromium-browser</Name>
        <RuntimeDependencies>
            <Dependency>libzeitgeist</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib/chromium-browser</Path>
        </Files>
    </Package>
    -->

    <Package>
        <Name>zeitgeist-dataprovider-firefox</Name>
        <Summary>Mozilla Firefox data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-firefox informs Zeitgeist about the web pages visited using Firefox.</Description>
        <RuntimeDependencies>
            <Dependency>libzeitgeist</Dependency>
            <Dependency>nspr</Dependency>
            <Dependency>xulrunner</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib/MozillaFirefox</Path>
            <Path fileType="data">/usr/lib/xul-ext-zeitgeist</Path>
        </Files>
    </Package>

    <Package>
        <Name>zeitgeist-dataprovider-eog</Name>
        <Summary>Eye of Gnome data provider for Zeitgeist</Summary>
        <Description>zeitgeist-dataprovider-eog informs Zeitgeist about the files viewed using Eye of Gnome.</Description>
        <Files>
            <Path fileType="library">/usr/lib/eog</Path>
        </Files>
    </Package>

