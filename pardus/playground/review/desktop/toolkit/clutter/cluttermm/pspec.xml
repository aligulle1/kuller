        <Files>
            <Path fileType="library">/usr/lib/</Path>
            <Path fileType="doc">/usr/share/doc/cluttermm/</Path>
        </Files>
    </Package>
    <Package>
        <Name>cluttermm-devel</Name>
        <Summary>Development headers for cluttermm</Summary>
        <RuntimeDependencies>
            <Dependency release="current">cluttermm</Dependency>
            <Dependency>clutter-devel</Dependency>
            <Dependency>gtkmm-devel</Dependency>
            <Dependency>pangomm-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib/pkgconfig</Path>
            <Path fileType="library">/usr/lib/cluttermm-1.0/</Path>
            <Path fileType="data">/usr/share/cluttermm-1.0</Path>
        </Files>
    </Package>
    <Package>
        <Name>cluttermm-docs</Name>
        <Summary>Reference files for cluttermm</Summary>
        <RuntimeDependencies>
            <Dependency release="current">cluttermm</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/doc/cluttermm/reference</Path>
            <Path fileType="doc">/usr/share/devhelp/</Path>
        </Files>
    </Package>
