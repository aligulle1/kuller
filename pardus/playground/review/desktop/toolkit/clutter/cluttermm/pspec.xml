    <Package>
        <Name>cluttermm</Name>
        <RuntimeDependencies>
            <Dependency>clutter</Dependency>
            <Dependency>glibmm</Dependency>
            <Dependency>gtkmm</Dependency>
            <Dependency>pangomm</Dependency>
            <Dependency>cairomm</Dependency>
            <Dependency>libsigc++</Dependency>
