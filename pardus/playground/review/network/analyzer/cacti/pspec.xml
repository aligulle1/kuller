<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>cacti</Name>
        <Homepage>http://www.cacti.net</Homepage>
        <Packager>
            <Name>Kaan Özdinçer</Name>
            <Email>kozdincer@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:web</IsA>
        <Summary>Frontend to rrdtool for monitoring systems and services</Summary>
        <Description>Cacti is a complete network graphing solution designed to harness the power of RRDTool's data storage and graphing functionality.</Description>
        <Archive sha1sum="4311cff2ec8883c013efd0225c73d145bcc1cf00" type="targz">http://www.cacti.net/downloads/cacti-0.8.7h.tar.gz</Archive>
    </Source>

    <Package>
        <Name>cacti</Name>
        <RuntimeDependencies>
            <Dependency>mod_php</Dependency>
            <Dependency>mysql-libs</Dependency>
            <Dependency>rrdtool</Dependency>
            <Dependency>net-snmp</Dependency>
            <Dependency>php-cli</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/cacti</Path>
            <Path fileType="data">/var/log/cacti</Path>
            <Path fileType="data">/var/lib/cacti</Path>
        </Files>
       <AdditionalFiles>
            <AdditionalFile target="/etc/apache2/vhosts.d/cacti.conf" owner="root" group="root" permission="0644">cacti-apache.conf</AdditionalFile>
            <AdditionalFile target="/etc/logrotate.d/cacti" owner="root" group="root" permission="0644">cacti.logrotate</AdditionalFile>
            <AdditionalFile target="/etc/cron.d/cacti" owner="root" group="root" permission="0644">cacti.cron</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>

    </Package>

    <History>
        <Update release="1">
            <Date>2011-11-17</Date>
            <Version>0.8.7h</Version>
            <Comment>First release.</Comment>
            <Name>Kaan Özdinçer</Name>
            <Email>kozdincer@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>

