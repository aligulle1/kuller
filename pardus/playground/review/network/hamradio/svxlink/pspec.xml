        <License>GPLv2</License>
        <IsA>library</IsA>
        <Summary>Repeater controller and EchoLink (simplex or repeater)</Summary>
        <Description>Svxlink is a multi purpose voice services system for ham radio use. For example, EchoLink connections are supported. Also, the SvxLink server can act as a repeater controller.</Description>
        <Archive sha1sum="a561dbc4c49e00b09bc03280a32b784015de3e33" type="targz">mirrors://sourceforge/svxlink/svxlink-11.05.tar.gz</Archive>
        <Archive sha1sum="4081b6fb1809b3da6bff17199cc0df6321deda02" type="tarbz2">mirrors://sourceforge/svxlink/sounds-en_US-heather-11.05.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>libsigc++1_2-devel</Dependency>
            <Dependency>gsm-devel</Dependency>
            <Dependency>speex-devel</Dependency>
            <Dependency>tcl-devel</Dependency>
            <Dependency>libgcrypt-devel</Dependency>
            <Dependency>alsa-lib-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>svxlink-11.05-remotetrx-setgid.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>svxlink</Name>
        <IsA>service</IsA>
        <IsA>app:console</IsA>
        <RuntimeDependencies>
            <Dependency>libsigc++1_2</Dependency>
            <Dependency>gsm</Dependency>
            <Dependency>speex</Dependency>
            <Dependency>tcl</Dependency>
            <Dependency>libgcrypt</Dependency>
            <Dependency>alsa-lib</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/var/spool/svxlink</Path>
            <Path fileType="data">/usr/share/svxlink</Path>
        </Files>
        <Provides>
            <COMAR name="svxlink" script="svxlink.service.py">System.Service</COMAR>
            <COMAR name="remotetrx" script="remotetrx.service.py">System.Service</COMAR>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
