    <Package>
        <Name>nagios-nrpe</Name>
        <Description>Nrpe is a system daemon that will execute various Nagios plugins locally on behalf of a remote (monitoring) host that uses the check_nrpe plugin. This package provides the core agent.</Description>
        <RuntimeDependencies>
            <Dependency release="current">nagios-plugins-nrpe</Dependency>
            <Dependency>nagios-plugins</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/nagios/nrpe.cfg</Path>
            <Path fileType="config">/etc/conf.d/nrpe</Path>
            <Path fileType="executable">/usr/sbin/nrpe</Path>
            <Path fileType="data">/var/run/nrpe</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/etc/conf.d/nrpe" owner="root" group="root" permission="0644">nrpe</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR name="nrpe" script="service.py">System.Service</COMAR>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>nagios-plugins-nrpe</Name>
        <Summary>Nrpe plugin for Nagios</Summary>
        <Description>Nrpe is a system daemon that will execute various Nagios plugins locally on behalf of a remote (monitoring) host that uses the check_nrpe plugin. This package provides the nrpe plugin for Nagios-related applications.</Description>
        <Files>
            <Path fileType="library">/usr/lib/nagios/plugins/check_nrpe</Path>
            <Path fileType="library">/usr/lib/nagios/plugins/nrpe_check_control</Path>
            <Path fileType="doc">/usr/share/doc/nagios-nrpe/README.nrpe_check_control</Path>
        </Files>
    </Package>

