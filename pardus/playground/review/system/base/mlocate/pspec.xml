        <License>GPLv3+</License>
        <IsA>app:console</IsA>
        <Summary>A utility to index and quickly search files</Summary>
        <Description>MLocate (Merging Locate) is new and fast "locate" implementation.</Description>
        <Archive sha1sum="1c8d10a6ae8185b8e7c88091d383563650e69ece" type="tarxz">https://fedorahosted.org/releases/m/l/mlocate/mlocate-0.23.1.tar.xz</Archive>
    </Source>

    <Package>
        <Name>mlocate</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="config">/etc</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="data">/var</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/etc/cron.daily/locate" permission="0755" owner="root">locate.cron</AdditionalFile>
        </AdditionalFiles>
    </Package>

