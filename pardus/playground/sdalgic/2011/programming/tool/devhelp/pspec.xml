        <License>GPLv2</License>
        <Icon>devhelp</Icon>
        <IsA>app:gui</IsA>
        <Summary>GTK+ API documentation browser</Summary>
        <Description>Devhelp is an API documentation browser for the GNOME desktop. It works natively with API documentation generated by gtk-doc.</Description>
        <Archive sha1sum="8a7c15a17ccfb0b39b1f1f8b57f77e544fb3b2b8" type="tarbz2">mirrors://gnome/devhelp/2.32/devhelp-2.32.0.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>webkit-gtk-devel</Dependency>
            <Dependency>gconf-devel</Dependency>
            <Dependency>libglade-devel</Dependency>
            <Dependency>libwnck-devel</Dependency>
            <Dependency>libunique-devel</Dependency>
            <Dependency>gtk2-devel</Dependency>
            <Dependency>pango-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>devhelp</Name>
        <RuntimeDependencies>
            <Dependency>webkit-gtk</Dependency>
            <Dependency>gconf</Dependency>
            <Dependency>libglade</Dependency>
            <Dependency>libwnck</Dependency>
            <Dependency>libunique</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>pango</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/gconf/schemas</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/devhelp</Path>
        </Files>
    </Package>

    <Package>
        <Name>gedit-plugin-devhelp</Name>
        <Summary>GTK+ API documentation browser plugin for gedit</Summary>
        <RuntimeDependencies>
            <Dependency>devhelp</Dependency>
            <Dependency>gedit</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/gedit-2</Path>
        </Files>
    </Package>

    <Package>
        <Name>devhelp-devel</Name>
        <Summary>Development files for devhelp</Summary>
        <RuntimeDependencies>
            <Dependency release="current">devhelp</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <!-- FIXME: Remove this if not necessary -->
            <Path fileType="man">/usr/share/man/man3</Path>
        </Files>
    </Package>

