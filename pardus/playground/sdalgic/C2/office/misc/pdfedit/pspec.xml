    <Source>
        <Name>pdfedit</Name>
        <Homepage>http://pdfedit.petricek.net/</Homepage>
        <Packager>
            <Name>Serdar Dalgıç</Name>
            <Email>serdar@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:gui</IsA>
        <Summary>PDF editor</Summary>
        <Description>Complete editing of pdf documents is made possible with PDFedit. You can change either raw pdf objects (for advanced users) or use predefined gui functions. Functions can be easily added as everything is based on a script.</Description>
        <Archive type="tarbz2" sha1sum="fd85ecd43667ffbc2e644ac6c72be5dea6104ac4">mirrors://sourceforge/pdfedit/pdfedit-0.4.5.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>boost-devel</Dependency>
            <Dependency>qt3</Dependency>
            <Dependency>doxygen</Dependency>
            <Dependency>openmotif</Dependency>
            <Dependency>libpaper</Dependency>
            <Dependency>t1lib</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- use page media box/rotation when getting text from
            a page instead of relying on the default values. -->
            <Patch level="1">rotate_text_fix.patch</Patch>
            <!-- gui: Enable opening read-only documents -->
            <Patch level="1">gui-enable-read-only_files.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>pdfedit</Name>
        <RuntimeDependencies>
            <Dependency>boost</Dependency>
            <Dependency>qt3</Dependency>
            <Dependency>openmotif</Dependency>
            <Dependency>libpaper</Dependency>
            <Dependency>t1lib</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc/pdfedit</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="data">/usr/share/pdfedit</Path>
            <Path fileType="data">/usr/share/applications</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/pdfedit.desktop">pdfedit.desktop</AdditionalFile>
        </AdditionalFiles>
   </Package>

