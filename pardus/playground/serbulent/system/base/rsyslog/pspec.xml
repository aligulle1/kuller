<PISI>
    <Source>
        <Name>rsyslog</Name>
        <Homepage>http://www.rsyslog.com</Homepage>
        <Packager>
            <Name>Serbülent ÜNSAL</Name>
            <Email>serbulent@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>service</IsA>
        <Summary>Rsyslog is a new generetion log deamon with many capabilities.</Summary>
        <Description>Rsyslog has many capabilites with integrated klog deamon, database support, native TLS support and many cool features...</Description>
        <Archive sha1sum="b624f5a0e7126b4ceb367f02a9add81afd4bc582" type="targz">http://cekirdek.pardus.org.tr/~serbulent/rsyslog/rsyslog-3.20.3.tar.gz</Archive>
   </Source>

    <Package>
        <Name>rsyslog</Name>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/rsyslog.conf">rsyslog.conf</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>rsyslog-doc</Name>
        <IsA>data:doc</IsA>
        <Summary>Rsyslog documents</Summary>
        <Description>Additional documentation for Rsyslog</Description>
        <RuntimeDependencies>
            <Dependency>rsyslog</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>



    <History>
