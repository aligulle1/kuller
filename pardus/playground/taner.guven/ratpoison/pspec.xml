            <Dependency>libXft-devel</Dependency>
            <Dependency>libX11-devel</Dependency>
            <Dependency>readline-devel</Dependency>
            <Dependency>libXt-devel</Dependency>
            <Dependency>libXinerama-devel</Dependency>
            <Dependency>libXtst-devel</Dependency>
            <Dependency>libXi-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>ratpoison</Name>
        <IsA>app:console</IsA>
        <RuntimeDependencies>
            <Dependency>libXft</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>libXtst</Dependency>
            <Dependency>libXinerama</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/ratpoison</Path>
            <Path fileType="executable">/usr/bin/rpws</Path>
            <Path fileType="doc">/usr/share/doc/ratpoison</Path>
            <Path fileType="info">/usr/share/info/ratpoison.info</Path>
            <Path fileType="man">/usr/share/man/man1/ratpoison.1</Path>
            <Path fileType="data">/usr/share/ratpoison</Path>
            <Path fileType="data">/usr/share/xsessions/ratpoison.desktop</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="644" target="/usr/share/xsessions/ratpoison.desktop">ratpoison.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

