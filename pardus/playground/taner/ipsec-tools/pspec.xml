<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>ipsec-tools</Name>
        <Homepage>http://ipsec-tools.sourceforge.net</Homepage>
        <Packager>
            <Name>Taner Taş</Name>
            <Email>taner@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:console</IsA>
        <Summary>Tools for configuring and using IPSec</Summary>
        <Description>IPsec-Tools is a port of KAME's IPsec utilities to the Linux-2.6 IPsec implementation.</Description>
        <Archive sha1sum="19dc160643547a0bfabf0fe0ad1a181d3c28f410" type="tarbz2">ftp://ftp.netbsd.org/pub/NetBSD/misc/ipsec-tools/0.7/ipsec-tools-0.7.3.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>mit-kerberos</Dependency>
            <Dependency>openldap-client</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>ipsec-tools</Name>
        <RuntimeDependencies>
            <Dependency>mit-kerberos</Dependency>
            <Dependency>openldap-client</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/conf.d/racoon">racoon</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <History>
        <Update release="1">
            <Date>2009-08-24</Date>
            <Version>0.7.3</Version>
            <Comment>First release.</Comment>
            <Name>Taner Taş</Name>
            <Email>taner@pardus.org.tr</Email>
        </Update>
    </History>
