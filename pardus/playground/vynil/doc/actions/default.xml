<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>$package</Name>
        <Homepage>$homepage</Homepage>
        <Packager>
            <Name>$fullName</Name>
            <Email>$email</Email>
        </Packager>
        <License>$license</License>
        <IsA>$isA</IsA>
        <Summary>$summary</Summary>
        <Description>$description</Description>
        <Archive sha1sum="$sha1sum" type="$archiveType">$downloadLink</Archive>
        <BuildDependencies>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>${package}.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>$package</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
            <Dependency versionFrom="000">aaa</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="all">/</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/${package}.desktop">${package}.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/pixmaps/${package}.png">${package}.png</AdditionalFile>
        </AdditionalFiles>
       <Provides>
             <COMAR script="package.py">System.Package</COMAR>
             <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <History>
        <Update release="$release">
            <Date>$date</Date>
            <Version>$packageVersion</Version>
            <Comment>$comment</Comment>
            <Name>$fullName</Name>
            <Email>$email</Email>
        </Update>
    </History>
</PISI>

