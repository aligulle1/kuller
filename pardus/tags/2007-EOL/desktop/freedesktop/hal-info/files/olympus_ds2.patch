# Description: Add Olympus DS-2 voice recorder
# Ubuntu: https://bugs.launchpad.net/bugs/94924
# Upstream: https://bugs.freedesktop.org/show_bug.cgi?id=12971
--- hal-info-20080215/fdi/information/10freedesktop/10-usb-music-players.fdi	2008-02-15 23:22:56.000000000 +0100
+++ hal-info-20080215.new/fdi/information/10freedesktop/10-usb-music-players.fdi	2008-02-28 12:16:03.000000000 +0100
@@ -757,6 +757,16 @@
           </match>
 	</match>
 
+        <!-- Olympus -->
+        <match key="@storage.originating_device:usb.vendor_id" int="0x07b4">
+          <!-- DS-2 voice recorder -->
+          <match key="@storage.originating_device:usb.product_id" int="0x020e">
+            <merge key="portable_audio_player.type" type="string">generic</merge>
+            <merge key="portable_audio_player.access_method" type="string">storage</merge>
+            <append key="portable_audio_player.output_formats" type="strlist">audio/x-ms-wma</append>
+          </match>
+        </match>
+
       </match>
     </match>      
 
