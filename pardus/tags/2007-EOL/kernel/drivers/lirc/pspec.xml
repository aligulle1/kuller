        <License>GPL-2</License>
        <IsA>app:console</IsA>
        <IsA>service</IsA>
        <Summary>Linux Infrared Remote Control system</Summary>
        <Description>LIRC is a package that allows you to decode and send infra-red signals of many (but not all) commonly used remote controls.</Description>
        <Archive sha1sum="ef5f3bd60ed10d4d1ab57931f8871cf9f8735630" type="tarbz2">http://lirc.sourceforge.net/software/snapshots/lirc-0.8.3pre1.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency release="86">kernel-source</Dependency>
            <Dependency versionFrom="1.0.15">alsa-lib</Dependency>
            <Dependency versionFrom="18.1">portaudio</Dependency>
            <Dependency>xorg-server</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">noparallel.patch</Patch>
            <Patch level="1">lirc-0.8.3pre1-imon-pad2keys.patch</Patch>
            <Patch level="1">lirc-0.8.3_pre1-remotewonderplus.patch</Patch>
            <Patch level="1">i2c_oops.patch</Patch>
            <Patch level="1">devicenode.patch</Patch>
            <Patch level="1">cflags.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>lirc-drivers</Name>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
        </Files>
    </Package>

    <Package>
        <Name>lirc</Name>
        <PartOf>applications.hardware</PartOf>
        <RuntimeDependencies>
            <Dependency release="86">kernel</Dependency>
            <Dependency versionFrom="1.0.15">alsa-lib</Dependency>
            <Dependency versionFrom="18.1">portaudio</Dependency>
            <Dependency>xorg-server</Dependency>
            <Dependency versionFrom="0.8.3_pre1">lirc-drivers</Dependency>
            <Dependency releaseFrom="17">comar-api</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/conf.d/lirc">lirc.conf.d</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/udev/rules.d/10-lirc.rules">10-lirc.rules</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

