            <AdditionalFile owner="root" permission="0644" target="/etc/conf.d/sysklogd">sysklogd.confd</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

