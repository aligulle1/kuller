default 0
timeout 10
splashimage /boot/grub/splash.xpm.gz
background 10333C

title=%(title)s
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:nomtrr,pmipal,ywrap,1024x768-32@60 splash=silent,fadein,theme:pardus console=tty2 mudur=livecd,language:it quiet
initrd /boot/%(initramfs)s

title=%(title)s (Modalita grafica standard)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off mudur=livecd,language:it quiet
initrd /boot/%(initramfs)s

title=%(title)s (Opzioni minime)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off acpi=off apm=off nolapic noapic maxcpus=0 mudur=livecd,language:it
initrd /boot/%(initramfs)s

title = Test della memoria
root 
kernel /boot/memtest.bin

title=Continua dal disco fisso
rootnoverify (hd0)
chainloader +1

title=Other Languages
configfile /boot/grub/menu.lst

