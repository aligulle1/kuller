<PISI>
    <Source>
        <Name>nvidia-old</Name>
        <Homepage>http://www.nvidia.com</Homepage>
        <Packager>
            <Name>İsmail Dönmez</Name>
            <Email>ismail@pardus.org.tr</Email>
        </Packager>
        <License>EULA</License>
        <IsA>library</IsA>
        <Summary>nVIDIA kernel and glx drivers for old nVIDIA cards like TNT2</Summary>
        <Description>nVIDIA kernel and glx drivers giving optimized 2d/3d performance on Linux for old nVidia cards</Description>
        <Archive sha1sum="09099a19dea10988bb4fbf67da8e1eec6757f3b9" type="tarbz2">http://cekirdek.pardus.org.tr/~ismail/dist/NVIDIA-Linux-x86-71.86.01.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency release="86">kernel-source</Dependency>
            <Dependency>xorg-server</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>nvidia-kernel-old</Name>
        <Summary>nVIDIA kernel driver [For TNT2 and such older cards]</Summary>
        <Description>nVIDIA kernel driver for low level infrastracture [For TNT2 and such older cards].</Description>
        <RuntimeDependencies>
            <Dependency release="86">kernel</Dependency>
        </RuntimeDependencies>
        <Conflicts>
          <Package>nvidia-kernel</Package>
          <Package>nvidia-kernel-new</Package>
        </Conflicts>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
            <Path fileType="config">/etc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/modules.d/nvidia">nvidia-modules.d</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="devices.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>nvidia-glx-old</Name>
        <Summary>nVIDIA glx module for X.org [For TNT2 and such older cards]</Summary>
        <Description>nVIDIA glx module for X.org for optimized 2d/3d performance [For TNT2 and such older cards].</Description>
        <RuntimeDependencies>
            <Dependency version="71.86.01">nvidia-kernel-old</Dependency>
        </RuntimeDependencies>
        <Conflicts>
          <Package>nvidia-glx</Package>
          <Package>nvidia-glx-new</Package>
        </Conflicts>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <Provides>
            <COMAR script="opengl-update.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>nvidia-tools-old</Name>
        <Summary>nvidia-settings tool [For TNT2 and such older cards]</Summary>
        <Description>GUI tool nvidia-settings for nVIDIA cards [For TNT2 and such older cards].</Description>
        <RuntimeDependencies>
            <Dependency version="71.86.01">nvidia-glx-old</Dependency>
            <Dependency>gtk2</Dependency>
        </RuntimeDependencies>
        <Conflicts>
          <Package>nvidia-tools</Package>
          <Package>nvidia-tools-new</Package>
        </Conflicts>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
        </Files>
    </Package>

