default 0
timeout 10
splashimage /boot/grub/splash.xpm.gz
background 10333C

title=%(title)s
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:nomtrr,pmipal,ywrap,1024x768-32@60 splash=silent,fadein,theme:pardus console=tty2 mudur=livecd,language:ca quiet
initrd /boot/%(initramfs)s

title=%(title)s (Mode Grafic Estandard)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off mudur=livecd,language:ca quiet
initrd /boot/%(initramfs)s

title=%(title)s (Opcions Minimes)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off acpi=off apm=off nolapic noapic pci=nomsi maxcpus=0 mudur=livecd,language:ca
initrd /boot/%(initramfs)s

title = Test de Memoria
root 
kernel /boot/memtest.bin

title=Engega d'enca del disc dur
rootnoverify (hd0)
chainloader +1

title=Other Languages
configfile /boot/grub/menu.lst

