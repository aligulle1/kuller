default 0
timeout 10
splashimage /boot/grub/splash.xpm.gz
background 10333C

title=%(title)s
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:nomtrr,pmipal,ywrap,1024x768-32@60 splash=silent,fadein,theme:pardus console=tty2 mudur=livecd,language:pt_BR quiet
initrd /boot/%(initramfs)s

title=%(title)s (Modo Grafico Padrao)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off mudur=livecd,language:pt_BR quiet
initrd /boot/%(initramfs)s

title=%(title)s (Opcao Minima)
root 
kernel /boot/%(kernel)s root=/dev/ram0 video=vesafb:off acpi=off apm=off nolapic noapic maxcpus=0 mudur=livecd,language:pt_BR
initrd /boot/%(initramfs)s

title = Teste de Memoria
root 
kernel /boot/memtest.bin

title=Continuar do Disco
rootnoverify (hd0)
chainloader +1

title=Other Languages
configfile /boot/grub/menu.lst

