<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>ntp</Name>
        <Homepage>http://www.ntp.org</Homepage>
        <Packager>
            <Name>Ali Erdinç Köroğlu</Name>
            <Email>erdinc@pardus.org.tr</Email>
        </Packager>
        <License>as:is</License>
        <IsA>daemon</IsA>
        <Summary>NTP daemon and client</Summary>
        <Description>Network Time Protocol utilities and daemons that will synchronize your computer's time to Coordinated Universal Time (UTC) via the NTP protocol and NTP servers</Description>
        <Archive sha1sum="5239d2fa462555bc7b9031cc2abc3e10dda61f60" type="targz">http://www.eecis.udel.edu/~ntp/ntp_spool/ntp4/ntp-4.2.2p4.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>libcap</Dependency>
            <Dependency>libwww</Dependency>
            <Dependency versionFrom="5b">portmap</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">ntp-4.2.2-droproot.patch</Patch>
            <Patch level="1">ntp-stable-4.2.0a-20040616-groups.patch</Patch>
            <Patch level="1">ntp-4.1.1c-rc3-authkey.patch</Patch>
            <Patch level="1">ntp-4.2.2-loopfilter.patch</Patch>
            <Patch level="1">ntp-4.2.2-manycast.patch</Patch>
            <Patch level="1">ntp-4.2.2-mlockall.patch</Patch>
            <Patch level="1">ntp-stable-4.2.0a-20050816-loopback.patch</Patch>
            <Patch level="1">ntp-stable-4.2.0a-20050816-keyfile.patch</Patch>
            <Patch level="1">ntp-4.2.2-sprintf.patch</Patch>
            <Patch level="1">ntp-4.2.0-sbinpath.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>ntp-server</Name>
        <RuntimeDependencies>
            <Dependency>libcap</Dependency>
            <Dependency>libwww</Dependency>
            <Dependency versionFrom="5b">portmap</Dependency>
            <Dependency>ntp-client</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="config">/etc</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="data">/var</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/ntp/ntp.conf">ntp.conf</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>ntp-client</Name>
        <RuntimeDependencies>
            <Dependency>mDNSResponder</Dependency>
            <Dependency>libwww</Dependency>
            <Dependency>libcap</Dependency>
        </RuntimeDependencies>
        <PartOf>applications.network</PartOf>
        <IsA>app:console</IsA>
        <Summary>NTP client</Summary>
        <Description>Network Time Protocol utility synchronize computers time to Coordinated Universal Time (UTC) via the NTP protocol and NTP servers</Description>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
        </Files>
        <Provides>
            <COMAR script="client.py">System.Package</COMAR>
        </Provides>
    </Package>

