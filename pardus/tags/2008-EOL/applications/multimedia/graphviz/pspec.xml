            <Dependency versionFrom="2.0.29">gd</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>python</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>swig</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Security fix, see bug#8422 for more information-->
            <Patch level="1">graphviz_lib_graph_parser.y.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>graphviz</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="2.0.29">gd</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>swig</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
