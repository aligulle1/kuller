<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>bitlbee</Name>
        <Homepage>http://bitlbee.org</Homepage>
        <Packager>
            <Name>H. İbrahim Güngör</Name>
            <Email>h.ibrahim.gungor@gmail.com</Email>
        </Packager>
        <License>GPLv2+</License>
        <IsA>service</IsA>
        <Summary>IRC to other chat networks gateway</Summary>
        <Description>Bitlbee can be used as an IRC server which forwards everything you say to people on other chat networks like ICQ, MSN, Jabber, AIM or Yahoo!.</Description>
        <Archive sha1sum="cfa152bd4d0ff703feaeedf55dbab84b64657dc8" type="targz">http://get.bitlbee.org/src/bitlbee-1.2.3.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>gnutls</Dependency>
            <Dependency>xinetd</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">bitlbee-xinetd.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>bitlbee</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="2.2.5">gnutls</Dependency>
            <Dependency>xinetd</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/xinetd.d</Path>
            <Path fileType="config">/etc/bitlbee</Path>
            <Path fileType="executable">/usr/sbin/bitlbee</Path>
            <Path fileType="data">/var/lib/bitlbee</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/bitlbee</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0640" target="/etc/bitlbee/bitlbee.conf">bitlbee.conf</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <History>
        <Update release="1">
            <Date>2009-01-23</Date>
            <Version>1.2.3</Version>
            <Comment>First release.</Comment>
            <Name>H. İbrahim Güngör</Name>
            <Email>h.ibrahim.gungor@gmail.com</Email>
        </Update>
    </History>
</PISI>
