<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>quassel</Name>
        <Homepage>http://quassel-irc.org</Homepage>
        <Packager>
            <Name>H. İbrahim Güngör</Name>
            <Email>h.ibrahim.gungor@gmail.com</Email>
        </Packager>
        <License>GPLv2</License>
        <License>GPLv3</License>
        <Icon>quassel</Icon>
        <IsA>app:gui</IsA>
        <Summary>A modern, cross-platform, distributed IRC client</Summary>
        <Description>Quassel IRC is a modern, distributed IRC client, meaning that one (or multiple) client(s) can attach to and detach from a central core --much like the popular combination of screen and a text-based IRC client such as WeeChat, but graphical.</Description>
        <Archive sha1sum="95705e4d09b34435d47328c4ac947102aef34751" type="tarbz2">http://www.quassel-irc.org/pub/quassel-0.4.1.tar.bz2</Archive>
        <BuildDependencies>
             <Dependency versionFrom="4.2.0">kdebase4-runtime</Dependency>
             <Dependency versionFrom="4.2.0">kdelibs4-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">gecos-utf8.diff</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>quassel</Name>
        <Summary>This package provides a complete traditional IRC client (client and core) in a single integrated package</Summary>
        <RuntimeDependencies>
             <Dependency versionFrom="4.2.0">kdebase4-runtime</Dependency>
             <Dependency versionFrom="4.4.3">qt4-sql-sqlite</Dependency>
             <Dependency releaseFrom="3">quassel-data</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/quassel</Path>
            <Path fileType="data">/usr/share/applications/quassel.desktop</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/quassel.desktop">quassel.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <Package>
        <Name>quasselclient</Name>
        <Summary>This package only provides Quassel's client component</Summary>
        <RuntimeDependencies>
             <Dependency versionFrom="4.2.0">kdebase4-runtime</Dependency>
             <Dependency releaseFrom="3">quasselcore</Dependency>
             <Dependency releaseFrom="3">quassel-data</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/quasselclient</Path>
            <Path fileType="data">/usr/share/applications/quasselclient.desktop</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/quasselclient.desktop">quasselclient.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <Package>
        <Name>quasselcore</Name>
        <Summary>This package only provides Quassel's core/server component</Summary>
        <RuntimeDependencies>
             <Dependency versionFrom="4.4.3">qt4-sql-sqlite</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/quasselcore</Path>
            <Path fileType="executable">/usr/bin/manageusers.py</Path>
            <Path fileType="executable">/var/cache/quassel</Path>
        </Files>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>quassel-data</Name>
        <Summary>Quassel's common data package; provides icons, documents and config files</Summary>
        <Files>
            <Path fileType="data">/usr/kde/4/share/apps</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/kde/4/share/apps/quassel/networks.ini">networks.ini</AdditionalFile>
        </AdditionalFiles>
    </Package>

