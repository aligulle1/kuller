    <Source>
        <Name>system-config-printer</Name>
        <Homepage>http://cyberelk.net/tim/software/system-config-printer</Homepage>
        <Packager>
            <Name>Ozan Çağlayan</Name>
            <Email>ozan@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:console</IsA>
        <Summary>A GUI excluded version of the original system-config-printer tool</Summary>
        <Description>The system-config-printer package provides python scripts used by hal-cups-utils to automatically detect and configure printers.</Description>
        <Archive sha1sum="758ac47d1a72eeca3e347e34ca63199c80da9696" type="tarbz2">http://cyberelk.net/tim/data/system-config-printer/1.1/system-config-printer-1.1.3.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>xmlto</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Don't use desktop-file-install -->
            <Patch level="1">makefile.patch</Patch>

            <!-- Fix CTYPE conversion problem when invoked through GTK/KDE applications -->
            <Patch level="1">fix-locale.patch</Patch>

            <!-- Security fix for #9388 -->
            <Patch>bug9388.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>system-config-printer</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="1.9.42">pycups</Dependency>
            <Dependency>pysmbc</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="config">/etc/dbus-1</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/man</Path>
            <Path fileType="data">/usr/share/system-config-printer</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
        </Files>
    </Package>

