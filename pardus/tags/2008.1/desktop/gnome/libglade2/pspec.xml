            <Dependency versionFrom="1.9">atk</Dependency>
            <Dependency versionFrom="2.8.10">gtk2</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">do-not-update-xml-catalog.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>libglade2</Name>
