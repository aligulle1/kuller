<PISI>
    <Source>
        <Name>kdeartwork4</Name>
        <Homepage>http://www.kde.org/</Homepage>
        <Packager>
            <Name>İsmail Dönmez</Name>
            <Email>ismail@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:gui</IsA>
        <Summary>KDE4 Artwork</Summary>
        <Description>Contains KDE4 Artwork (window decorations, widget styles and the like).</Description>
        <Archive type="tarbz2" sha1sum="2e02d2a0e2c22f866c67a4d8d858346507b70651">mirrors://kde/stable/4.1.1/src/kdeartwork-4.1.1.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.1.1">kdelibs4</Dependency>
        </BuildDependencies>
    </Source>
    <Package>
        <Name>kdeartwork4-emoticons</Name>
        <Summary>KDE4 emoticons</Summary>
        <Description>Contains several collections of emoticons used by official and unofficial KDE 4 chat clients, such as Kopete and Konversation.</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/emoticons</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-icons</Name>
        <Summary>KDE4 icon themes</Summary>
        <Description>Contains KDE4 icon themes</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/icons</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-wallpapers</Name>
        <Summary>KDE4 wallpapers</Summary>
        <Description>Contains additional wallpapers for KDE 4.</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/wallpapers</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-styles</Name>
        <Summary>KDE4 widget styles</Summary>
        <Description>Contains additional widget styles for KDE4.</Description>
        <RuntimeDependencies>
            <Dependency versionFrom="4.1.1">kdelibs4</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/kde/4/lib</Path>
            <Path fileType="library">/usr/kde/4/share/apps/kwin</Path>
            <Path fileType="library">/usr/kde/4/share/apps/kstyle</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-screensavers</Name>
        <Summary>KDE4 screensavers</Summary>
        <Description>Contains screensavers for KDE4</Description>
        <RuntimeDependencies>
            <Dependency>xscreensaver</Dependency>
            <Dependency versionFrom="4.1.1">kdelibs4</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/kde/4/bin</Path>
            <Path fileType="data">/usr/kde/4/share/apps/kscreensaver</Path>
            <Path fileType="data">/usr/kde/4/share/apps/kfiresaver</Path>
            <Path fileType="data">/usr/kde/4/share/kde4/services</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-kworldclock-maps</Name>
        <Summary>KDE4 KWorldclock maps</Summary>
        <Description>Contains KWorldclock maps for KDE4</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/apps/kworldclock</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-colorschemes</Name>
        <Summary>KDE4 color schemes</Summary>
        <Description>Contains color schemes for KDE4</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/apps/color-schemes</Path>
        </Files>
    </Package>
    <Package>
        <Name>kdeartwork4-sounds</Name>
        <Summary>KDE4 system sounds</Summary>
        <Description>Contains system sound for KDE4</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/sounds</Path>
        </Files>
    </Package>
