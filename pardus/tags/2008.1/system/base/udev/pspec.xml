        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/udev/rules.d/60-logitechmouse.rules">logitechmouse.rules</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

