            <Dependency versionFrom="8.5.0">tcltk</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- default browser: firefox, file manager: xdg-open -->
            <Patch>pardus-default.patch</Patch>
            <Patch>amsn-remote-path.patch</Patch>
            <Patch>disable-auto_update.patch</Patch>
            <Patch>amsn-desktop.patch</Patch>
            <Patch>makefile.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>amsn</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="8.5.0">tcl</Dependency>
            <Dependency versionFrom="8.5.0">tcltk</Dependency>
            <Dependency releaseFrom="2">snack</Dependency>
            <Dependency releaseFrom="3">tls</Dependency>
            <!-- pardus-default.patch uses xdg-open for file manager compatibility of desktop sessions -->
            <Dependency>xdg-utils</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/usr/share/amsn</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/icons</Path>
        </Files>
    </Package>

