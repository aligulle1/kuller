    <Source>
        <Name>logrotate</Name>
        <Homepage>http://packages.debian.org/unstable/admin/logrotate.html</Homepage>
        <Packager>
            <Name>S.Çağlar Onur</Name>
            <Email>caglar@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:console</IsA>
        <Summary>Rotates, compresses, and emails system logs</Summary>
        <Description>Logrotate is designed to ease administration of systems that generate large numbers of log files. It allows automatic rotation, compression, removal, and emailing of log files.</Description>
        <Archive sha1sum="c2dccac55b697d5a7337927aa9ab7b9363d237ac" type="tarbz2">http://cekirdek.pardus.org.tr/~faik/archives/logrotate-3.7.2.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>popt</Dependency>
            <Dependency>sed</Dependency>
            <Dependency>shadow</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>logrotate</Name>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/etc/cron.daily/logrotate.cron">logrotate.cron</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/logrotate.conf">logrotate.conf</AdditionalFile>
        </AdditionalFiles>
    </Package>

