            <Dependency>libxslt</Dependency>
            <Dependency>libIDL</Dependency>
            <Dependency>hal</Dependency>
            <Dependency>pulseaudio</Dependency>
            <Dependency release="114">kernel-source</Dependency>
        </BuildDependencies>
