            <Patch>changeset-15678.patch</Patch>
            <Patch level="1">gcc-4.3.patch</Patch>
            <Patch>use-o3-to-workaround-gcc-ice.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>virtualbox</Name>
        <RuntimeDependencies>
            <Dependency>libsdl</Dependency>
            <Dependency versionFrom="4.4.3">qt4</Dependency>
            <Dependency>hal</Dependency>
            <Dependency>pulseaudio</Dependency>
            <Dependency release="114">kernel</Dependency>
