+++ kdelibs-4.1.85/kdecore/io/kdebug.cpp	2008-12-11 18:15:14.000000000 +0100
@@ -313,7 +313,7 @@
         }
 
         KConfigGroup cg(config, QString::number(area));
-        int mode = cg.readEntry(key, 2);
+        int mode = cg.readEntry(key, 4);
         return OutputMode(mode);
     }
 
