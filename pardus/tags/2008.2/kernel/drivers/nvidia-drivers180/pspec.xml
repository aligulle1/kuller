<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>nvidia-drivers180</Name>
        <Homepage>http://www.nvidia.com/</Homepage>
        <Packager>
            <Name>Fatih Aşıcı</Name>
            <Email>fatih@pardus.org.tr</Email>
        </Packager>
        <License>NVIDIA</License>
        <IsA>driver</IsA>
        <Summary>nVIDIA kernel and glx drivers for GeForce 6xxx and newer NVIDIA cards</Summary>
        <Description>This package contains nVIDIA kernel and glx drivers giving optimized 2d/3d performance on Linux for GeForce 6xxx and newer NVIDIA cards.</Description>
        <Archive sha1sum="459e474ed7ed65186a44b8550a9bb9896836c1d6" type="tarbz2">http://cekirdek.pardus.org.tr/~fatih/dist/NVIDIA-Linux-x86-180.22.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency release="114">kernel-source</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">rt.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>nvidia-drivers180</Name>
        <RuntimeDependencies>
            <Dependency release="114">kernel</Dependency>
            <Dependency versionFrom="1.1.1">zorg</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="library" permanent="true">/lib/modules</Path>
            <Path fileType="library">/usr/lib/xorg/nvidia-*/drivers</Path>
            <Path fileType="library">/usr/lib/xorg/nvidia-*/extensions</Path>
            <Path fileType="library">/usr/lib/xorg/nvidia-*/lib*</Path>
            <Path fileType="header">/usr/lib/xorg/nvidia-*/include</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/modprobe.d/nvidia-180">modprobe.conf</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
            <COMAR script="xorg.driver.py">Xorg.Driver</COMAR>
        </Provides>
    </Package>

    <History>
        <Update release="1">
            <Date>2009-01-13</Date>
            <Version>180.22</Version>
            <Comment>Initial release for 180.x series drivers</Comment>
            <Name>Fatih Aşıcı</Name>
            <Email>fatih@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>
