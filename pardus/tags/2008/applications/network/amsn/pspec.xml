        </BuildDependencies>
        <Patches>
            <Patch>symlink.patch</Patch>
            <!-- default browser: firefox, file manager: xdg-open -->
            <Patch>pardus-default.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>amsn</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="8.5_beta2">tcl</Dependency>
            <Dependency versionFrom="8.5_beta2">tcltk</Dependency>
            <Dependency>snack</Dependency>
            <Dependency releaseFrom="3">tls</Dependency>
            <!-- pardus-default.patch uses xdg-open for file manager compatibility of desktop sessions -->
            <Dependency>xdg-utils</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/usr/share/amsn</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/amsn.desktop">amsn.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

