            <Dependency>libidn</Dependency>
        </BuildDependencies>
         <Patches>
            <Patch>whois-4.7.2-config-file.patch</Patch>
            <Patch level="1">whois-4.7.26-security.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>whois</Name>
        <RuntimeDependencies>
            <Dependency>libidn</Dependency>
        </RuntimeDependencies>
