        <Files>
            <Path fileType="executable">/usr/kde/4/bin</Path>
            <Path fileType="config">/usr/kde/4/etc</Path>
            <Path fileType="config">/usr/kde/4/env</Path>
            <Path fileType="config">/usr/kde/4/shutdown</Path>
            <Path fileType="header">/usr/kde/4/include</Path>
            <Path fileType="library">/usr/kde/4/lib</Path>
            <Path fileType="data">/usr/kde/4/share</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/usr/kde/4/env/agent-startup.sh">agent-startup.sh</AdditionalFile>
            <AdditionalFile owner="root" permission="0755" target="/usr/kde/4/shutdown/agent-shutdown.sh">agent-shutdown.sh</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

