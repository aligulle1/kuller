            <Dependency>cdparanoia</Dependency>
            <Dependency>flac</Dependency>
            <Dependency>lame</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Partial fix for autostart option of kscd -->
            <Patch>partial-fix-for-start-option.diff</Patch>

