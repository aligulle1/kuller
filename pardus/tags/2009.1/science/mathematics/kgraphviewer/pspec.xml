        <BuildDependencies>
            <Dependency>kdelibs-devel</Dependency>
            <Dependency>kdepimlibs-devel</Dependency>
            <Dependency>graphviz</Dependency>
            <!-- needed by part -->
            <Dependency>boost-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">generic-name-entry-and-icon.diff</Patch>
        </Patches>
    </Source>

