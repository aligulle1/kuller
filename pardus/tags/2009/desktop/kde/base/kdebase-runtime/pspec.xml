    <Source>
        <Name>kdebase-runtime</Name>
        <Homepage>http://www.kde.org/</Homepage>
        <Packager>
            <Name>Gökçen Eraslan</Name>
            <Email>gokcen@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:gui</IsA>
        <Summary>KDE4 Runtime Requirements</Summary>
        <Description>kdebase-runtime contains KDE4 base runtime applications and data files needed at runtime by other KDE applications. In this package, core applications and libraries like Nepomuk server, kcmshell4, kwalletd, kio libraries and kdesu are included.</Description>
        <Archive type="tarbz2" sha1sum="dd829270b5fb21e4c24db5e7d16db6e99fe51c1d">mirrors://kde/stable/4.2.4/src/kdebase-runtime-4.2.4.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.2.4">kdelibs-devel</Dependency>
            <Dependency>clucene</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>xine-lib</Dependency>
            <Dependency>samba</Dependency>
            <Dependency>pulseaudio</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Fedora -->
            <Patch level="1">fedora/kdebase-runtime-4.1.1-iconthemes-inherit.patch</Patch>

            <!-- Mandriva patches -->
            <!-- start nepomuk after plasma to speed up desktop startup -->
            <Patch>mandriva/kdebase-runtime-backport-4.3.0-rev937499.patch</Patch>
            <!-- Hand off control and routing of devices to Pulseaudio, ignore other devices in Phonon -->
            <Patch level="1">mandriva/kdebase-runtime-4.2.0-mandriva-pulseaudio-ignore-audiodevices.patch</Patch>
            <!-- lzma kio support -->
            <Patch level="1">mandriva/kdebase-runtime-4.2.1-xz-support.patch</Patch>

            <!-- Pardus patches -->
            <!-- Preselect utf-8 in encoding setting of knetattach -->
            <Patch level="1">pardus/use-utf8-knetattach.diff</Patch>

            <!-- Preview images inside folders in Preview mode of dolphin, backport from KDE 4.3 -->
            <Patch>pardus/directory-thumbnail-kde43.diff</Patch>

            <!-- Disable logout sound to decrease logout time 3-4 times, now we are the KDE4 distro with fastest logout time :) -->
            <Patch level="1">pardus/disable-logout-sound.diff</Patch>

            <!-- Switch to drkonqi of KDE 4.3 -->
            <Patch>pardus/drkonqi-kde43-r976386.diff</Patch>
            <!-- Grab Oxygen desktoptheme fixes from 4.3 -->
            <Patch>pardus/update-oxygen-desktoptheme-r972599.diff</Patch>
            <!-- Nepomuk fixes from trunk -->
            <Patch>pardus/nepomuk-svn-r918563.diff</Patch>
            <Patch>pardus/nepomuk-svn-r924690-kde176233.diff</Patch>
            <Patch>pardus/nepomuk-svn-r960314-kde184725.diff</Patch>
            <Patch>pardus/nepomuk-svn-r960331-kde174852.diff</Patch>
            <Patch>pardus/nepomuk-svn-r960360.diff</Patch>
            <Patch>pardus/nepomuk-svn-r960397-kde186910.diff</Patch>
            <Patch>pardus/nepomuk-svn-r966596.diff</Patch>
            <!-- Disable systray app. by default, it can be enabled by adding 'enable systray applet=true' to nepomukstrigirc -->
            <Patch>pardus/strigi-systray-config.diff</Patch>
            <!-- Disable all nepomuk/strigi popup notifications, it can be enabled in System Settins - Notifications module -->
            <Patch level="1">pardus/disable-nepomuk-popups.diff</Patch>
        </Patches>
    </Source>
    <Package>
        <Name>kdebase-runtime</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.2.4">kdelibs</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>clucene</Dependency>
            <Dependency>xine-lib</Dependency>
            <Dependency>samba</Dependency>
            <Dependency>pulseaudio</Dependency>
            <Dependency>hicolor-icon-theme</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>kdebase4-runtime</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/kde/4/bin</Path>
            <Path fileType="config">/usr/kde/4/etc</Path>
            <Path fileType="library">/usr/kde/4/lib</Path>
            <Path fileType="data">/usr/kde/4/share</Path>
            <Path fileType="data">/usr/share/icons/hicolor</Path>
        </Files>
    </Package>

    <Package>
        <Name>icon-theme-oxygen-png</Name>
        <PartOf>desktop.looknfeel</PartOf>
        <Summary>Oxygen icon theme in PNG format</Summary>
        <Description>icon-theme-oxygen-png package contains Oxygen icon theme which is designed as default icon theme of KDE4 in PNG format.</Description>
        <RuntimeDependencies>
            <Dependency>icon-theme-oxygen-index</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/share/icons/oxygen/8x8</Path>
            <Path fileType="data">/usr/share/icons/oxygen/16x16</Path>
            <Path fileType="data">/usr/share/icons/oxygen/22x22</Path>
            <Path fileType="data">/usr/share/icons/oxygen/32x32</Path>
            <Path fileType="data">/usr/share/icons/oxygen/48x48</Path>
            <Path fileType="data">/usr/share/icons/oxygen/64x64</Path>
            <Path fileType="data">/usr/share/icons/oxygen/128x128</Path>
        </Files>
    </Package>

    <Package>
        <Name>icon-theme-oxygen-svg</Name>
        <PartOf>desktop.looknfeel</PartOf>
        <Summary>Oxygen icon theme in SVG format</Summary>
        <Description>icon-theme-oxygen-svg package contains Oxygen icon theme which is designed as default icon theme of KDE4 in SVG format.</Description>
        <RuntimeDependencies>
            <Dependency>icon-theme-oxygen-index</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/share/icons/oxygen/scalable</Path>
        </Files>
    </Package>

    <Package>
        <Name>icon-theme-oxygen-index</Name>
        <PartOf>desktop.looknfeel</PartOf>
        <Summary>Index file for Oxygen icon theme</Summary>
        <Description>icon-theme-oxygen-index package contains index.theme file for Oxygen icon theme which is a metadata file.</Description>
        <Files>
            <Path fileType="data">/usr/share/icons/oxygen/index.theme</Path>
        </Files>
    </Package>

    <Package>
        <Name>kdebase-runtime-doc</Name>
        <Summary>Documentation of kdebase-runtime package</Summary>
        <Description>kdebase-runtime-doc contains documentation of applications and libraries included in kdebase-runtime package.</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>kdebase-sounds</Name>
        <Summary>KDE4 System Sounds</Summary>
        <Description>kdebase-sounds contains default KDE4 system sounds.</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/sounds</Path>
        </Files>
    </Package>

    <Package>
        <Name>kdebase-emoticons</Name>
        <Summary>KDE4 Emoticons</Summary>
        <Description>kdebase-emoticonts contains default KDE4 emoticons.</Description>
        <Files>
            <Path fileType="data">/usr/kde/4/share/emoticons</Path>
        </Files>
    </Package>

