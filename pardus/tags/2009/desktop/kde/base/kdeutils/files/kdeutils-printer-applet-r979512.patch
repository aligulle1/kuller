+
+    def __init__ (self, title=_("Authentication"), parent=None,
+                  flags=gtk.DIALOG_MODAL | gtk.DIALOG_NO_SEPARATOR,
+                  buttons=(gtk.STOCK_CANCEL, gtk.RESPONSE_CANCEL,
