            <Dependency release="123">kernel-module-headers</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>makefile.patch</Patch>
            <Patch level="1">fix-building-2.6.30.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>module-omnibook</Name>
        <RuntimeDependencies>
            <Dependency release="123">kernel</Dependency>
            <Dependency>module-omnibook-userspace</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
        </Files>
    </Package>

    <Package>
        <Name>module-omnibook-userspace</Name>
        <Summary>Userspace documentation, tools, udev and modprobe rules for the kernel driver omnibook</Summary>
        <Conflicts>
            <Package releaseTo="1">module-omnibook</Package>
        </Conflicts>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

