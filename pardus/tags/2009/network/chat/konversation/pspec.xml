            <Dependency>kdepimlibs-devel</Dependency>
            <Dependency>libXScrnSaver</Dependency>
            <Dependency>qt</Dependency>
            <Dependency>qca2</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">pardus_custom_settings.patch</Patch>
            <Patch level="1">pardus-ctcp-version.patch</Patch>
            <Patch level="1">media-lastfm.patch</Patch>
            <Patch level="1">media-audacious2.patch</Patch>
            <Patch level="1">use_pardus_bugzilla.patch</Patch>
        </Patches>
    </Source>

