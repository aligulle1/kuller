+
+    bo_gem->bo.size = size;
+    bo_gem->bo.offset = 0;
+    bo_gem->bo.virtual = NULL;
+    bo_gem->bo.bufmgr = bufmgr;
+    bo_gem->name = strdup(name);
+    bo_gem->refcount = 1;
+    bo_gem->pinned = 1;
+    bo_gem->gem_handle = handle;
